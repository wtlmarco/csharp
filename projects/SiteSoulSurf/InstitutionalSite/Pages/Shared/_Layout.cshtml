<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstitutionalSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InstitutionalSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="d-flex flex-row justify-content-between">
            <div class="d-flex flex-row">
                <div>Siga-nos</div>
                <div class="ms-2"><i class="bi-envelope"></i></div>
                <div class="ms-2"><i class="bi-instagram"></i></div>
                <div class="ms-2"><i class="bi-linkedin"></i></div>
                <div class="ms-2"><i class="bi-facebook"></i></div>
            </div>
            <div class="d-flex flex-row">
                <div><i class="bi-telephone"></i> (99)9999-9999</div>
                <div class="ms-2"><i class="bi-geo-alt"></i> Lorem ipsum dolor sit amet, 999</div>
                <div class="ms-2"><i class="bi-globe"></i> Português</div>
            </div>
        </div>
    </header>
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Soul Surf</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <section>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </section>
    
    <footer>
        <div class="container">
            &copy; 2023 - InstitutionalSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>