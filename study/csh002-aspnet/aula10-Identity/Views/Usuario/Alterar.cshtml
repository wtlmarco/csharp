@model AlterarUsuarioViewModel
@{
    ViewBag.Subtitulo = "Alteração de Dados Cadastrais";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<form asp-action="Alterar" class="row">
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.NomeCompleto"></label><br>
        <input asp-for="@Model.NomeCompleto" class="form-control" autofocus autocomplete="off">
        <span asp-validation-for="@Model.NomeCompleto" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.DataNascimento"></label><br>
        <input asp-for="@Model.DataNascimento" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.Telefone"></label><br>
        <input asp-for="@Model.Telefone" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.Email"></label><br>
        <input asp-for="@Model.Email" class="form-control" autocomplete="off">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
        <button type="Submit" class="btn btn-success">Salvar</button>
    </div>
</form>