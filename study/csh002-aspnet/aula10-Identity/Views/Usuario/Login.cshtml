@model LoginViewModel

@{
    var returnUrl = "";
    ViewBag.Subtitulo = "Login Usuário";
    if(Context.Request.Query.ContainsKey("returnUrl"))
    {
        returnUrl = Context.Request.Query["returnUrl"].ToString();
    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<partial name="_MensagemPartial"></partial>

<div class="row">
    <form asp-action="Login" class="col-4">
        <input type="hidden" asp-for="@Model.ReturnUrl" value="@returnUrl">
        <div class="form-group mb-3">
            <label asp-for="@Model.Usuario"></label><br>
            <input asp-for="@Model.Usuario" class="form-control" autofocus autocomplete="off">
            <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Senha"></label><br>
            <input asp-for="@Model.Senha" class="form-control">
            <span asp-validation-for="@Model.Senha" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group">
            <input asp-for="@Model.Lembrar" class="form-check-input">
            <label asp-for="@Model.Lembrar" class="form-check-label"></label><br>
            <span asp-validation-for="@Model.Lembrar" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Voltar</a>
            <button type="Submit" class="btn btn-success">Entrar</button>
        </div>
    </form>
    <p>
        Ainda não é cadastrado? <a asp-action="Cadastrar">Clique aqui</a> para se cadastrar.
    </p>
    <p>
        Esqueceu a senha? <a asp-action="EsqueciSenha">Clique aqui</a> para redefini-la.
    </p>
</div>